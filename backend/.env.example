# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smartsports_rwanda
DB_USER=postgres
DB_PASSWORD=your_password
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/smartsports_rwanda

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_secure
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRE=30d

# Encryption
BCRYPT_SALT_ROUNDS=12

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=smartsports-rwanda-files

# Mobile Money APIs
# MTN MoMo API
MTN_MOMO_API_URL=https://sandbox.momodeveloper.mtn.com
MTN_MOMO_PRIMARY_KEY=your_mtn_primary_key
MTN_MOMO_SECONDARY_KEY=your_mtn_secondary_key
MTN_MOMO_SUBSCRIPTION_KEY=your_mtn_subscription_key
MTN_MOMO_API_USER_ID=your_mtn_api_user_id
MTN_MOMO_API_KEY=your_mtn_api_key
MTN_MOMO_CALLBACK_URL=https://your-domain.com/api/v1/payments/mtn/callback

# Airtel Money API
AIRTEL_MONEY_API_URL=https://openapiuat.airtel.africa
AIRTEL_MONEY_CLIENT_ID=your_airtel_client_id
AIRTEL_MONEY_CLIENT_SECRET=your_airtel_client_secret
AIRTEL_MONEY_GRANT_TYPE=client_credentials
AIRTEL_MONEY_CALLBACK_URL=https://your-domain.com/api/v1/payments/airtel/callback

# Rwanda Payment Gateway (RSwitch)
RSWITCH_API_URL=https://api.rswitch.rw
RSWITCH_MERCHANT_ID=your_merchant_id
RSWITCH_API_KEY=your_rswitch_api_key
RSWITCH_SECRET_KEY=your_rswitch_secret_key
RSWITCH_CALLBACK_URL=https://your-domain.com/api/v1/payments/rswitch/callback

# Stripe Configuration (for international cards)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# SMS & Notifications
# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Africa's Talking
AFRICAS_TALKING_USERNAME=your_username
AFRICAS_TALKING_API_KEY=your_api_key
AFRICAS_TALKING_SENDER_ID=SmartSports

# Email Configuration (NodeMailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=SmartSports Rwanda <noreply@smartsports.rw>

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# QR Code Configuration
QR_CODE_SIZE=300
QR_CODE_MARGIN=4
QR_CODE_COLOR_DARK=#000000
QR_CODE_COLOR_LIGHT=#FFFFFF

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://smartsports.rw
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Cron Jobs
ENABLE_CRON_JOBS=true

# Security
COOKIE_SECRET=your_cookie_secret_here
SESSION_SECRET=your_session_secret_here

# Application URLs
FRONTEND_URL=http://localhost:3000
ADMIN_DASHBOARD_URL=http://localhost:3001
TEAM_DASHBOARD_URL=http://localhost:3002
SCANNER_APP_URL=http://localhost:3003

# Webhook URLs
WEBHOOK_SECRET=your_webhook_secret_for_verification
