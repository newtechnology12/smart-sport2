{
  "name": "smartsports-rwanda-backend",
  "version": "1.0.0",
  "description": "SmartSports Rwanda - Professional Sports Ticketing Backend API",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "dev:watch": "nodemon --exec ts-node src/server.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate src/database/migrations/Migration -d src/config/data-source.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/config/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/config/data-source.ts",
    "schema:sync": "npm run typeorm -- schema:sync -d src/config/data-source.ts",
    "schema:drop": "npm run typeorm -- schema:drop -d src/config/data-source.ts",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "mocha 'tests/unit/**/*.test.js' --timeout 10000 --recursive",
    "test:integration": "mocha 'tests/integration/**/*.test.js' --timeout 30000 --recursive",
    "test:load": "k6 run tests/load/k6-load-test.js",
    "test:coverage": "nyc npm run test",
    "test:watch": "mocha 'tests/**/*.test.js' --watch --recursive",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "docker:build": "docker build -t smartsports-backend .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "backup:db": "node scripts/backup-database.js",
    "restore:db": "node scripts/restore-database.js"
  },
  "keywords": [
    "sports",
    "ticketing",
    "rwanda",
    "mobile-money",
    "qr-codes",
    "api"
  ],
  "author": "SmartSports Rwanda Team",
  "license": "MIT",
  "dependencies": {
